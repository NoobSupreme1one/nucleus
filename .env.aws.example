# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Cognito Authentication
AWS_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
AWS_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS RDS Database
DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/nucleus

# AWS S3 Storage
AWS_S3_BUCKET_NAME=your-nucleus-bucket-name
AWS_S3_REGION=us-east-1

# Amazon Bedrock
AWS_BEDROCK_REGION=us-east-1

# Keep Perplexity for market research (optional)
PERPLEXITY_API_KEY=your_perplexity_key

# Stripe (optional - for subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# VPC Configuration (for Lambda)
VPC_SECURITY_GROUP_ID=sg-xxxxxxxxx
VPC_SUBNET_ID_1=subnet-xxxxxxxxx
VPC_SUBNET_ID_2=subnet-yyyyyyyyy

# Custom Domain (optional)
CUSTOM_DOMAIN=api.your-domain.com

# Production Settings
NODE_ENV=production
PORT=8080